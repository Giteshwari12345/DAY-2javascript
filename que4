<button onclick="myFun()">Try it</button>

<p id="FONT"> </p>

<script>
function myFun() {
  var str = "giteshwari wadbudhe";
  var result = str.fontsize(7);
  document.getElementById("FONT").innerHTML = result;
}
</script>

